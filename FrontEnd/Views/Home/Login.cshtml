@model FrontEnd.Models.UserModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<!--start content-->
<main class="authentication-content">
    <div class="container-fluid">
        <div class="mt-4">
            <div class="card rounded-0 overflow-hidden shadow-none border mb-5 mb-lg-0">
                <div class="row g-0">
                   @* <div class="col-12 order-1 col-xl-8 d-flex align-items-center justify-content-center border-end">
                        <img src="~/img/site-logo.png" class="img-fluid" alt="">
                    </div>*@
                    <div class="col-12 col-xl-4 order-xl-2">
                        <div class="card-body p-4 p-sm-5">
                            <h5 class="card-title">Iniciar Sesión</h5>
                           <br />
                            <form asp-action="Index">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                <div class="row g-3">

                                    <div class="col-12">
                                        <div class="form-group">
                                            <label asp-for="UserName" class="form-label"></label>
                                            <div class="ms-auto position-relative">
                                                <div class="position-absolute top-50 translate-middle-y search-icon px-3"><i class="bi bi-person-fill"></i></div>
                                                <input asp-for="UserName" type="text" class="form-control radius-30 ps-5" placeholder="Nombre Usuario" />
                                            </div>
                                            <span asp-validation-for="UserName" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="col-12">
                                        <div class="form-group">
                                            <label asp-for="Password" class="form-label"></label>
                                            <div class="ms-auto position-relative">
                                                <div class="position-absolute top-50 translate-middle-y search-icon px-3"><i class="bi bi-lock-fill"></i></div>
                                                <input asp-for="Password" type="password" class="form-control radius-30 ps-5" placeholder="Contraseña" />
                                            </div>
                                            <span asp-validation-for="Password" class="text-danger"></span>
                                        </div>
                                    </div>

@*                                    <div class="col-6">
                                        <div class="form-check form-switch">
                                            <input class="form-check-input" type="checkbox" id="flexSwitchCheckChecked" checked="">
                                            <label class="form-check-label" for="flexSwitchCheckChecked">Recuerdame</label>
                                        </div>
                                    </div>
                                    <div class="col-6 text-end">
                                        <a href="authentication-forgot-password.html">Olvidaste tu contraseña?</a>
                                    </div>*@

                                    <div class="col-12">
                                        <div class="d-grid">
                                            <input type="submit" value="Acceder" class="btn btn-primary radius-30" />
                                        </div>
                                    </div>

                                    <div class="col-12 text-center">
                                        <p class="mb-0">¿Aún no tienes una cuenta? <a href="/Home/Register">Registrate aquí</a></p>
                                    </div>
                                </div>
                            </form>
                            <br />
                            <br />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

<!--end page main-->

@section Scripts {
    @{
        //<partial name="_ValidationScriptsPartial" />
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
