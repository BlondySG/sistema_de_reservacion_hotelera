@model FrontEnd.Models.RegisterModel

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<!--start content-->
<main class="authentication-content">
    <div class="container">
        <div class="mt-4">
            <div class="card rounded-0 overflow-hidden shadow-none border mb-5 mb-lg-0">
                <div class="row g-0">
                    @*<div class="col-12 order-1 col-xl-8 d-flex align-items-center justify-content-center border-end">
                        <img src="~/img/site-logo.png" class="img-fluid" alt="">
                    </div>*@
                    <div class="col-12 col-xl-4 order-xl-2">
                        <div class="card-body p-4 p-sm-5">
                            <h5 class="card-title">Registro</h5>
                            <br />
                            <form asp-action="Register">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                <div class="row g-3">
                                    <div class="col-12">
                                        <div class="form-group">
                                            <label asp-for="UserName" class="form-label"></label>
                                            <div class="ms-auto position-relative">
                                                <div class="position-absolute top-50 translate-middle-y search-icon px-3"><i class="bi bi-person-circle"></i></div>
                                                <input asp-for="UserName" class="form-control radius-30 ps-5" aria-required="true" placeholder="Digite Nombre Usuario" />
                                            </div>
                                            <span asp-validation-for="UserName" class="text-danger"></span>
                                        </div>
                                    </div>


                                <div class="col-12">
                                    <div class="form-group">
                                        <label asp-for="Password" class="form-label"></label>
                                        <div class="ms-auto position-relative">
                                            <div class="position-absolute top-50 translate-middle-y search-icon px-3"><i class="bi bi-lock-fill"></i></div>
                                            <input asp-for="Password" class="form-control radius-30 ps-5" aria-required="true" placeholder="Digite su Contraseña" />
                                        </div>
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                </div>

                                    <div class="col-12">
                                        <div class="form-group">
                                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                            <label asp-for="Email" class="form-label"></label>
                                            <div class="ms-auto position-relative">
                                                <div class="position-absolute top-50 translate-middle-y search-icon px-3"><i class="bi bi-envelope-fill"></i></div>
                                                <input asp-for="Email" class="form-control radius-30 ps-5" autocomplete="username" aria-required="true" placeholder="Digite su correo" />
                                            </div>
                                            <span asp-validation-for="Email" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <br />
                                    <button type="submit" class="w-100 btn btn-lg btn-primary">Registrar</button>

                                </div>
                               
                            </form>
                            <br />
                            <br />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

<!--end page main-->
@section Scripts {
    @{
        //<partial name="_ValidationScriptsPartial" />
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
