@model FrontEnd.Models.ReservacionesViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Detalles</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            ID
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Idreservacion)
        </dd>
        <dt>
            Fecha inicio
        </dt>
        <dd>
            @Html.DisplayFor(model => model.FechaInicio)
        </dd>
        <dt>
            Cantidad noches
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CantidadNoches)
        </dd>
        <dt>
            Nombre de cliente
        </dt>
        <dd>
            @Html.DisplayFor(model => model.NombreCliente)
        </dd>
        <dt>
           Cédula de cliente
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CedulaCliente)
        </dd>
        <dt>
            Habitación
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Idhabitacion)
        </dd>
        <dt>
            Usuario
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Idusuario)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Editar", "Edit", new {  id = Model.Idreservacion  }) |
    <a asp-action="Index">Regresar a la lista de reservaciones</a>
</div>
