@model IEnumerable<FrontEnd.Models.UsuarioViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Lista de usuarios</h2>

<p>
    <a asp-action="Create">Crear nuevo usuario</a>
</p>
<table class="table">
    <thead>
        <tr>
            @*<th>
                @Html.DisplayNameFor(model => model.Idusuario)
            </th>*@
            <th>
                @*@Html.DisplayNameFor(model => model.PrimerNombre)*@
                Primer nombre
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.SegundoNombre)*@
                Segundo nombre
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.PrimerApellido)*@
                Primer apellido
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.SegundoApellido)*@
                Segundo apellido
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.Username)*@
                Usuario
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.Contrasena)
            </th>*@
            <th>
                @*@Html.DisplayNameFor(model => model.Idrol)*@
                Rol
            </th>
            <th>
                Acciones
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            @*<td>
                @Html.DisplayFor(modelItem => item.Idusuario)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.PrimerNombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SegundoNombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrimerApellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SegundoApellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.Contrasena)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Rol.NombreRol)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new {  id=item.Idusuario }) |
                @Html.ActionLink("Detalles", "Details", new {  id=item.Idusuario  }) |
                @Html.ActionLink("Eliminar", "Delete", new {  id=item.Idusuario  })
            </td>
        </tr>
}
    </tbody>
</table>
